{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2023",
		"moduleResolution": "node16",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"removeComments": false,
		"strictFunctionTypes": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noEmitOnError": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./build",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strictNullChecks": false
	},
	"ts-node": {
		"esm": true,
	},
	"exclude": [
		"./node_modules"
	],
	"include": [
		"./src",
	]
}
